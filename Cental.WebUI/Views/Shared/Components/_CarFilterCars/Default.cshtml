@*
    _CarFilterCars
*@

<style>
    .filter-form .form-control {
        height: 40px;
        font-size: 14px;
    }

    .filter-form .btn-danger {
        height: 40px;
        font-size: 14px;
        padding: 8px 12px;
    }

    .filter-form .container {
        max-width: 1200px;
    }

    .filter-form .row {
        display: flex;
        flex-wrap: wrap;
        margin-left: -5px;
        margin-right: -5px;
    }

    .filter-form .col-md-2, .filter-form .col-md-3, .filter-form .col-md-1 {
        padding-left: 5px;
        padding-right: 5px;
        flex: 1;
    }
</style>

<form class="filter-form mb-4" asp-action="Index" asp-controller="Cars">
    <div class="container mt-4">
        <div class="row g-3">

            <div class="col-md-2">
                <div class="form-group">
                    <input type="text" class="form-control" name="modelName" placeholder="Model Adı Girin">
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.brands"  name="brand">
                        <option selected disabled>Marka Seçin</option>
                    </select>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.gasTypes" name="gasType">
                        <option selected disabled>Yakıt Seçin</option>
                    </select>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <select class="form-control" asp-items="@ViewBag.gearTypes" name="gearType">
                        <option selected disabled>Vites Seçin</option>
                    </select>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <input type="number" class="form-control" name="year" placeholder="Model Yılı">
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Ücret Girin">
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <input type="number" class="form-control" name="kilometer" placeholder="Kilometre Girin">
                </div>
            </div>
            <div class="col-md-1 d-flex align-items-center">
                <button class="btn btn-danger w-100">Filtrele</button>
            </div>
        </div>
    </div>
</form>