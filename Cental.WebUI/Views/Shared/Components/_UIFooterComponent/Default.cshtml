@model List<Footer>

@{
    string colClass = "col-md-4";
}

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            @foreach (var item in Model)
            {
                <div class="@colClass col-lg-@colClass.Replace("md-", "lg-") col-xl-@colClass.Replace("md-", "xl-")">
                    <div class="footer-item d-flex flex-column">
                        <div class="footer-item">
                            <h4 class="text-white mb-4">@item.Title</h4>
                            <p class="mb-3">@item.Description</p>
                        </div>
                        @if (Model.IndexOf(item) == 0)
                        {
                            <div class="position-relative">
                                <form method="post" asp-action="Subscribe" asp-controller="Subscribe">
                                    <input name="Email" class="form-control rounded-pill w-100 py-3 ps-4 pe-5" type="text" placeholder="E-Posta">
                                    <button type="submit" class="btn btn-secondary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">Abone Ol</button>
                                    <span class="text-danger">@TempData["SubscribeError"]</span>
                                    <span class="text-danger">@TempData["SubscribeNullError"]</span>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>