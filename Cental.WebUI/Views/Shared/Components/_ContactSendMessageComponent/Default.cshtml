@model Contact
@*
   _ContactSendMessageComponent
*@
<div class="col-xl-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="bg-secondary p-5 rounded">
        <h4 class="text-primary mb-4">Bizimle İletişime Geçin</h4>
        <form asp-action="SendMessage" asp-controller="Contact" method="post">
            <div class="row g-4">
                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="NameSurname" value="@TempData["NameSurname"]" placeholder="Ad Soyad">
                        <label for="name">Ad Soyad</label>
                        <span class="text-danger">@TempData["NameSurnameNullError"]</span>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" asp-for="Email" value="@TempData["Email"]" placeholder="E-Posta">
                        <label for="email">E-Posta</label>
                        <span class="text-danger">@TempData["EmailNullError"]</span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Subject" value="@TempData["Subject"]" placeholder="Konu">
                        <label for="subject">Konu</label>
                        <span class="text-danger">@TempData["SubjectNullError"]</span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Mesajınız" id="message" asp-for="Message" style="height: 160px">@TempData["Message"]</textarea>
                        <label for="message">Mesajınız</label>
                        <span class="text-danger">@TempData["MessageNullError"]</span>
                    </div>

                </div>
                <div class="col-12">
                    <button class="btn btn-light w-100 py-3" type="submit">Mesajı Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>



