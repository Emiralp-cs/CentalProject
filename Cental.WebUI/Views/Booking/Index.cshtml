@model CreateBookingDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/UILayout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <h3 class="text-center mb-4">Araba Kiralama Sayfası</h3>
            <div class="card shadow">
                <div class="card-body d-flex flex-column">
                    <div class="row">
                        <div class="col-lg-6 d-flex flex-column">
                            <div class="form-container p-4">
                                <form asp-action="Index" asp-controller="Booking" class="flex-grow-1">
                                    <div class="mb-3">
                                        <label class="form-label">Başlangıç Tarihi</label>
                                        <input type="date" asp-for="PickUpDate" class="form-control" placeholder="">
                                        <span class="text-danger">@ViewBag.PickUpDateError</span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Bitiş Tarihi</label>
                                        <input type="date" class="form-control" asp-for="DropOffDate">
                                        <span class="text-danger">@ViewBag.DropOffDateError</span>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Araç Nereye Gelsin</label>
                                        <input type="text" class="form-control" asp-for="PickUpLocation">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Araç Teslim Noktası</label>
                                        <input type="text" class="form-control" asp-for="DropOffLocation">
                                    </div>
                                    <input type="hidden" name="Price" value="@ViewBag.Price" />
                                    <span class="text-danger">@ViewBag.DateError</span>

                                    <br />
                                    <span class="text-danger">@ViewBag.userNullError</span>
                                    <span class="text-danger">@ViewBag.BookingError</span>
                                    <button class="btn btn-primary rounded-pill btn-lg fixed-width-button">Hemen Kirala</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <img src="@ViewBag.ImageUrl" class="card-img-top car-image" alt="@ViewBag.BrandAndModel">
                            <div class="mt-3">
                                <h5 class="card-title">@ViewBag.BrandAndModel</h5>
                                <p class="text-muted">Puanı:@(ViewBag.Review == "-1" ? "Değerlendirilmedi" : ViewBag.Review)</p>
                                <h4 class="text-primary">@ViewBag.Price ₺ / Günlük</h4>
                                <div class="d-flex justify-content-between text-secondary my-3">
                                    <span><i class="fa fa-users"></i> @ViewBag.SeatCount Koltuk</span>
                                    <span><i class="fa fa-car"></i>@ViewBag.Transmission</span>
                                    <span><i class="fa fa-gas-pump"></i> @ViewBag.GasType</span>
                                </div>
                                <div class="d-flex justify-content-between text-secondary">
                                    <span><i class="fa fa-calendar"></i>@ViewBag.Year</span>
                                    <span><i class="fa fa-cogs"></i>@ViewBag.GearType</span>
                                    <span><i class="fa fa-road"></i>@ViewBag.Kilometer</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white mt-auto d-flex justify-content-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />

<style>
    .car-image {
        height: 300px;
        object-fit: cover;
    }

    .card {
        min-height: 600px; /* Adjust as needed */
    }

    .form-container {
        padding-top: 40px; /* İstediğiniz boşluğu ayarlayın */
    }

    .fixed-width-button {
        width: 250px; /* Butonun genişliğini ayarlayın */
        margin: 0 auto; /* Butonu ortalayın */
    }
</style>


