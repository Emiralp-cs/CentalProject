@model BookingCarDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/UILayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <h3 class="text-center mb-4">Araba Kiralama Sayfası</h3>
            <div class="card shadow">
                <div class="card-body d-flex flex-column">
                    <div class="row">
                        <div class="col-lg-6 d-flex flex-column">
                            <div class="form-container p-4">
                                <form class="flex-grow-1">
                                    <div class="mb-3">
                                        <label for="pickUpLocation" class="form-label">Pick Up Location</label>
                                        <input type="text" class="form-control" id="pickUpLocation" placeholder="Enter a City or Airport">
                                    </div>
                                    <div class="mb-3">
                                        <label for="dropOffLocation" class="form-label">Drop Off Location</label>
                                        <input type="text" class="form-control" id="dropOffLocation" placeholder="Enter a City or Airport">
                                    </div>
                                    <div class="mb-3">
                                        <label for="pickUpDate" class="form-label">Pick Up Date</label>
                                        <input type="date" class="form-control" id="pickUpDate">
                                    </div>
                                    <div class="mb-3">
                                        <label for="dropOffDate" class="form-label">Drop Off Date</label>
                                        <input type="date" class="form-control" id="dropOffDate">
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <img src="@ViewBag.ImageUrl" class="card-img-top car-image" alt="@ViewBag.BrandAndModel">
                            <div class="mt-3">
                                <h5 class="card-title">@ViewBag.BrandAndModel</h5>
                                <p class="text-muted">Puanı:@(ViewBag.Review == "-1" ? "Değerlendirilmedi" : ViewBag.Review)</p>
                                <h4 class="text-primary">@ViewBag.Price ₺ / Günlük</h4>
                                <div class="d-flex justify-content-between text-secondary my-3">
                                    <span><i class="fa fa-users"></i> @ViewBag.SeatCount Koltuk</span>
                                    <span><i class="fa fa-car"></i>@ViewBag.Transmission</span>
                                    <span><i class="fa fa-gas-pump"></i> @ViewBag.GasType</span>
                                </div>
                                <div class="d-flex justify-content-between text-secondary">
                                    <span><i class="fa fa-calendar"></i>@ViewBag.Year</span>
                                    <span><i class="fa fa-cogs"></i>@ViewBag.GearType</span>
                                    <span><i class="fa fa-road"></i>@ViewBag.Kilometer</span>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                    <div class="card-footer bg-white mt-auto d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary rounded-pill btn-lg fixed-width-button">Hemen Kirala</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />

<style>
    .car-image {
        height: 300px;
        object-fit: cover;
    }

    .card {
        min-height: 600px; /* Adjust as needed */
    }

    .form-container {
        padding-top: 40px; /* İstediğiniz boşluğu ayarlayın */
    }

    .fixed-width-button {
        width: 250px; /* Butonun genişliğini ayarlayın */
        margin: 0 auto; /* Butonu ortalayın */
    }
</style>