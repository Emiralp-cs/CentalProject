@model UserLoginDto
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <title>KiralaGit.com</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->

    <!-- vendor css -->
    <link rel="stylesheet" href="~/flat-able-admin/dist/assets/css/style.css">




</head>

<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <div class="card borderless">
                <div class="row align-items-center ">
                    <div class="col-md-12">
                        <form method="post">
                            <div class="card-body">
                                <h4 class="mb-3 f-w-400">Giriş Sayfası</h4>
                                <hr>
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                                </div>
                                <div class="form-group mb-4">
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                                </div>


                                <p style="color:red">
                                    @Html.ValidationSummary()
                                </p>


                                <button class="btn btn-block btn-primary mb-4">Giriş Yap</button>
                                <hr>

                                <p class="mb-0 text-muted">Bir hesabın yok mu ?<a href="/Register/SignUp" class="f-w-400">Kayıt Ol</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signin ] end -->
    <!-- Required Js -->




</body>

</html>
