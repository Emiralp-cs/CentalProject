@model TopBar
@{
    ViewData["Title"] = "Top Bar Düzenleme";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="container">
    <div class="alert alert-danger mt-3">
        <h5>Site Bütünlüğü Bozulmaması İçin 1 Öğe İle Sınırlandırılmıştır.</h5>
    </div>
    <form asp-action="Index" method="post">
        <input type="hidden" asp-for="TopBarId" />
        <div class="form-group">
            <label><strong>Lokasyon: </strong></label>
            <input type="text" asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><strong>Telefon Numarası: </strong></label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label><strong>E-Posta: </strong></label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label><strong>Facebook Url: </strong></label>
            <input type="text" asp-for="Facebook" class="form-control" />
            <span asp-validation-for="Facebook" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label><strong>Twitter Url: </strong></label>
            <input type="text" asp-for="Twitter" class="form-control" />
            <span asp-validation-for="Twitter" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label><strong>Instagram Url: </strong></label>
            <input type="text" asp-for="Instagram" class="form-control" />
            <span asp-validation-for="Instagram" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label><strong>Linkedln Url: </strong></label>
            <input type="text" asp-for="Linkedln" class="form-control" />
            <span asp-validation-for="Linkedln" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary">Düzenle</button>

    </form>

</div>