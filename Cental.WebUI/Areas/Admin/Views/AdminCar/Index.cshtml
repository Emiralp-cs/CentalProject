@model List<AppUser>
@{
    ViewData["Title"] = "Manager Rolüne Sahip Kullanıcılar";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="container mt-4">

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Adı Soyadı</th>
                <th>Sİtede Bulunan Arabaları</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(string.Join(" ", item.FirstName, item.LastName))</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="CarList" asp-route-id="@item.Id">
                            <i class="feather icon-car"></i> Arabalar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>