@model List<Footer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<style>
    .alert-info-red {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 10px;
        margin-bottom: 20px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: sans-serif;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
        vertical-align: middle;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
    }

        .btn-info:hover {
            background-color: #138496;
        }
</style>

<div class="alert-info-red">
    <h5>Site Bütünlüğü Bozulmaması İçin 4 Öğe İle Sınırlandırılmıştır.</h5>
</div>

<table>
    <tr>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Servis Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a class="btn btn-info" asp-action="UpdateFooter" asp-route-id="@item.FooterId">Güncelle</a></td>
        </tr>
    }
</table>


