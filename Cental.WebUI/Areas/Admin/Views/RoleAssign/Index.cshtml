@using Cental.DTOLayer.UserDtos
@model List<ResultUserDto>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>Roller</th>
        <th>Rol Ata</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td>@item.FullName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                @foreach (var role in item.Roles)
                {
                    string badgeClass = ""; 
                    switch (role)
                    {
                        case "Admin":
                            badgeClass = "bg-danger"; 
                            break;
                        case "Manager":
                            badgeClass = "bg-info"; 
                            break;
                        case "User":
                            badgeClass = "bg-success"; 
                            break;
                        default:
                            badgeClass = "bg-secondary"; 
                            break;
                    }
                    <span class="badge @badgeClass me-1">@role</span>
                }
            </td>

            <td><a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-pen"></i> Rol Ata</a></td>
        </tr>
    }
</table>